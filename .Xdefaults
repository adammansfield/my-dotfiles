! Resolution | Diagonal | DPI
! -----------|----------|----
!  2560x1440 |    30 in | 100
!  1920x1080 |    24 in |  92

! Manually set dpi if not it is detected incorrectly.
!Xft.dpi:        100
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintfull

Rxvt*background: #0A0A0A
Rxvt*font: Lucida Console-16
Rxvt*foreground: Gray
Rxvt*font: Lucida Console-13
Rxvt*saveLines: 1000
Rxvt*scrollBar: False
Rxvt*scrollTtyOutput: False
Rxvt*scrollTtyKeypress: True

URxvt*background: #0A0A0A
URxvt*boldfont: xft:DejaVu Sans Mono:style=bold:size=12
URxvt*font: xft:DejaVu Sans Mono:style=book:size=12
URxvt*foreground: Gray
URxvt*font: xft:LucidaTypewriter:style=Sans Bold:size=10
URxvt*geometry: 79x50
URxvt*saveLines: 1000
URxvt*scrollBar: False
URxvt*scrollTtyOutput: False
URxvt*scrollTtyKeypress: True

! Backup font
! URxvt.font:xft:Monospace:pixelsize=14
! URxvt.boldfont:xft:Monospace:style=bold:pixelsize=14

! Black.
URxvt*color0:  #000000
! Red.
URxvt*color1:  #B40000
! Green.
URxvt*color2:  #00AA00
! Yellow.
URxvt*color3:  #AAAA00
! Blue.
URxvt*color4:  #5555AA
! Magenta.
URxvt*color5:  #AA00AA
! Cyan.
URxvt*color6:  #00AAAA
! White.
URxvt*color7:  #AAAAAA
! Bright black.
URxvt*color8:  #555555
! Bright red.
URxvt*color9:  #FF0000
! Bright green.
URxvt*color10: #00FF00
! Bright yellow.
URxvt*color11: #FFFF00
! Bright blue.
URxvt*color12: #6464FF
! Bright magenta.
URxvt*color13: #FF00FF
! Bright cyan.
URxvt*color14: #00FFFF
! Bright white.
URxvt*color15: #FFFFFF
